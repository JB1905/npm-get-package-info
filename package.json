{
  "name": "npm-get-package-info",
  "version": "2.1.0",
  "description": "Get info about npm package",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/npm-get-package-info.cjs.js",
  "module": "lib/npm-get-package-info.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "rollup -c",
    "test": "jest --coverage --detectOpenHandles",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/npm-get-package-info.git"
  },
  "keywords": [
    "npm",
    "package",
    "info",
    "check",
    "repository"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/npm-get-package-info/issues"
  },
  "homepage": "https://github.com/JB1905/npm-get-package-info#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/jest": "^26.0.8",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7",
    "semantic-release": "^17.1.1"
  },
  "peerDependencies": {
    "child_process": "^1.0.2",
    "util": "^0.12.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.spec.json"
      }
    },
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
